# YouTube API Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here

# YouTube API Key (for public data only)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Airtable Credentials
# Get Personal Access Token from: https://airtable.com/create/tokens
AIRTABLE_TOKEN=pat.your_airtable_token_here
AIRTABLE_BASE_ID=app_your_base_id_here
AIRTABLE_TABLE_NAME=Videos

# n8n Configuration (if self-hosting)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Optional: Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=alerts@yourdomain.com

# Application Settings
SYNC_FREQUENCY=daily
LOG_LEVEL=info
TIMEZONE=America/New_York
