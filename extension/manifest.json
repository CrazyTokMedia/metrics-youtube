{
  "manifest_version": 3,
  "name": "YouTube Treatment Comparison Helper",
  "version": "1.2.1",
  "description": "Automate PRE vs POST treatment period comparison in YouTube Studio Analytics",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://studio.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*"],
      "js": ["logger.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
